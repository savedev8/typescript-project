{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "isolatedModules": true,
  },
  "ts-node" : {
      "compilerOptions" : {
          "module": "CommonJS",
      }
    },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./config/jest/setupTests.ts", "src/entities/Counter/ui/Counter.test.tsx",
  ]
}